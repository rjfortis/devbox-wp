{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "php@8.3",
    "mysql80@latest",
    "sass@latest",
    "nodejs@22.14.0"
  ],
  "shell": {
    "init_hook": [
    ],
    "scripts": {
      "start_initservices": [
        "mysqld > mysqlog.log 2>&1 &"
        "php -S localhost:8000 > server.log 2>&1 &",
      ],
      "stop_initservices": [
        "mysqld > mysqlog.log 2>&1 &"
        "php -S localhost:8000 > server.log 2>&1 &",
      ],
      "start_services": [
        "mysqld > mysqlog.log 2>&1 &",
        "php -S localhost:8000 > server.log 2>&1 &",
        "cd ~/code/wordpress/wp-content/themes/rfmtheme && npm run dev"
      ],
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
